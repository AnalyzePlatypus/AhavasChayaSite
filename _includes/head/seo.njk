<!-- Generator -->
<meta name="generator" content="eleventy">

<title>{{ pageTitle }} | {{ seo.siteTitle }}</title>

<meta name="title" content="{{ pageTitle }} | {{ seo.siteTitle }}">
<meta name="description" content="{{ pageDescription or seo.siteDescription }}">
<meta name="author" content="{{ author or seo.siteTitle}}">
<meta name="image" content="{% env "ROOT_URL" %}{{seo.imagePath}}?v={% version %}" />

<!-- Colors -->
<meta name="theme-color" content="{{ seo.themeColor }}">
<meta name="msapplication-TileColor" content="{{ seo.themeColor }}">

<!-- Open Graph / Facebook -->  
<meta property="og:type" content="website">
<meta property="og:url" content="{% env "ROOT_URL" %}{{ permalink }}">
<meta property="og:title" content="{{ pageTitle }} | {{ seo.siteTitle }}">
<meta property="og:description" content="{{ pageDescription or seo.siteDescription }}">
<meta property="og:image" content="{% env "ROOT_URL" %}{{ ogImagePath or seo.imagePath }}?v={% version %}">

<meta property="og:image:width" content="{{ ogImageWidth or seo.imageWidth }}">
<meta property="og:image:height" content="{{ ogImageHeight or seo.imageHeight }}">
		
<!-- Twitter -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content="{{ pageTitle }} | {{ seo.siteTitle }}" />
<meta name="twitter:url" content="{% env "ROOT_URL" %}{{ permalink }}" />
<meta name="twitter:description" content="{{ pageDescription or seo.siteDescription }}" />
<meta name="twitter:image" content="{% env "ROOT_URL" %}{{ ogImagePath or seo.imagePath }}?v={% version %}" />
<meta name="twitter:creator" content="{{seo.twitterUsername}}" />

<!-- Icons -->
<link rel="apple-touch-icon" href="{% env "ROOT_URL" %}{{seo.appleTouchIconPath}}">
<link rel="apple-touch-icon" sizes="180x180" href="{% env "ROOT_URL" %}{{seo.appleTouchIconPath}}">
<link rel="icon" type="image/png" sizes="32x32" href="{% env "ROOT_URL" %}{{seo.favicon32Path}}">
<link rel="icon" type="image/png" sizes="16x16" href="{% env "ROOT_URL" %}{{seo.favicon16Path}}">

<!-- Web manifest -->
<link rel="manifest" href="/manifest.json">

<!-- Canonical link -->
{# See https://developers.google.com/search/docs/crawling-indexing/consolidate-duplicate-urls #}
{% if canonicalUrl %}
	<link rel="canonical" href="{{ canonicalUrl or seo.canonicalUrl }}">
{% endif %}



{% jsonLdScript meta, pageType %}