<article  class='fixed sm:hidden left-0 top-12 bg-white w-full z-50 px-6 py-3 pb-12 border-b border-white shadow-xl transition-all'
x-cloak
x-trap="expanded"
x-show="expanded"
x-transition:enter="transition ease-out duration-100"
x-transition:enter-start="opacity-0 scale-90 -translate-y-12"
x-transition:enter-end="opacity-100 scale-100 translate-y-0"
x-transition:leave="transition ease-in duration-100"
x-transition:leave-start="opacity-100 scale-100 translate-y-0"
x-transition:leave-end="opacity-0 scale-95 -translate-y-2">	
	
	<div class='flex flex-col' @click='expanded = false'>
		{% for link in mobileNavlinks %}
			{% link link %}{% endlink %}
		{% endfor %}
	</div>
</article>